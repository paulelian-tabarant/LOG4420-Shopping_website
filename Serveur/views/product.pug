extends layout

block content
	main
		article
			h1#product-name Produit
			.row
				.col
					img#product-image(alt='product', src='#')
				.col
					section
						h2 Description
						p#product-desc
					section
						h2 Caractéristiques
						ul#product-features
					hr
					form#add-to-cart-form.pull-right
						label(for='product-quantity') Quantité:
						input#product-quantity.form-control(value='1', min='1', type='number')
						button.btn(title='Ajouter au panier', type='submit')
							i.fa.fa-cart-plus
							|   Ajouter
					p
						| Prix: 
						strong#product-price
			#dialog.dialog
				| Le produit a été ajouté au panier.
append scripts
	script(type='text/javascript', src='./assets/scripts/products.service.js')
	script(type='text/javascript', src='./assets/scripts/product.controller.js')